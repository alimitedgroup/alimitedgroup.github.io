{
    "tinymist.formatterMode": "typstyle",
    "editor.formatOnSave": true,
    "tinymist.fontPaths": [
        "${workspaceFolder}/assets",
    ],
    "tinymist.systemFonts": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "files.exclude": {
        "dist": true
    },
}